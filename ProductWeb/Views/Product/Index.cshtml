@model IEnumerable<Product>
@{ 
    ViewData["Title"] = "Index";
}

<div class="card">
    <div class="card-header bg-dark text-light ml-0 row container">
        <div class="col-md-6">
            <i class="fa fa-list-ul"></i>Lista de Productos
        </div>
        <div class="col-md-6 text-right">
            <a asp-action="Create" asp-controller="Product" class="btn btn-primary btn-sm text-white">
                <i class="fa fa-plus"></i>
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            @if (Model.Count() > 0)
            {
                <div class="table-responsive">
                    <table class="table table-bordered">
                        
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(a => a.Image)</th>
                                <th>@Html.DisplayNameFor(a => a.Name)</th>
                                <th>@Html.DisplayNameFor(a => a.Description)</th>
                                <th>@Html.DisplayNameFor(a => a.Price)</th>
                                <th>@Html.DisplayNameFor(a => a.Rate)</th>
                                <th>Opciones</th>
                            </tr>
                        </thead>                      
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @{
                                        var base64 = Convert.ToBase64String(item.Image);
                                        var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                                        if (item.Image != null && item.Image.Length > 0)
                                        {
                                            <img src="@imgsrc" style="width:50px; margin:2px">

                                        }
                                        else
                                        {
                                            <img src="https://via.placeholder.com/150" style="width:50px; margin:2px">
                                        }

                                    }
                                </td>
                                <td>@Html.DisplayFor(x => item.Name)</td>
                                <td>@Html.DisplayFor(x => item.Description)</td>
                                <td>@Html.DisplayFor(x => item.Price)</td>
                                <td width="120px">
                                    <partial name="_RatingPartial" model="@item.Rate"/>
                                </td>
                                <td width="100px">
                                    <partial name="_TableButtonPartial" model="@item.IdProduct" />


                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>    
            }
            else
            {
                <p>No Har Registros en base de datos</p>
            }
        </div>
    </div>
</div>
